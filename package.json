{
  "name": "takeoff",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Tane Piper <piper.tane@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "better-npm-run": "^0.1.0",
    "minimist": "^1.2.0"
  },
  "bin": {
    "takeoff-up": "./utilities/docker-compose/up.js",
    "takeoff-build": "./utilities/docker-compose/build.js",
    "takeoff-stop": "./utilities/docker-compose/stop.js",
    "takeoff-down": "./utilities/docker-compose/down.js",
    "takeoff-docker-build": "./utilities/takeoff/docker-compose-build.js"
  },
  "scripts": {
    "preinstall": "cd ./app && npm i && cd ../api && npm i",
    "postinstall": "npm run to:build",
    "to:compose:build": "./utilities/docker-compose/build.js",
    "to:compose:up": "./utilities/docker-compose/up.js",
    "to:compose:stop": "./utilities/docker-compose/stop.js",
    "to:compose:down": "./utilities/docker-compose/down.js",
    "to:compose:rm": "./utilities/docker-compose/uninstall.js",
    "to:build": "./utilities/takeoff/docker-compose-build.js",
    "dev:connect:api": "docker exec -it target_api_1 /bin/sh",
    "dev:connect:db": "psql -h localhost -p 5431 -U myappuser -d myappdb",
    "db:reset": "better-npm-run db:reset"
  },
  "betterScripts": {
    "db:reset": {
      "env": {
        "NODE_ENV": "development"
      },
      "command": "docker exec docker_api_1 node_modules/.bin/sequelize db:migrate:undo:all && docker exec docker_api_1 node_modules/.bin/sequelize db:migrate && docker exec docker_api_1 node_modules/.bin/sequelize db:seed:all"
    }
  }
}
